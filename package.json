{
  "name": "pcss-cli",
  "type": "module",
  "version": "0.2.3",
  "description": "config.js driven postcss cli",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/BriteSnow/node-pcss-cli.git"
  },
  "keyword": [
    "postcss",
    "cli",
    "rollup"
  ],
  "dependencies": {
    "autoprefixer": "^10.4.4",
    "chokidar": "^3.5.3",
    "fs-extra-plus": "^0.6.0",
    "lodash.debounce": "^4.0.8",
    "minimist": "^1.2.6",
    "postcss": "^8.4.12",
    "postcss-import": "^14.1.0",
    "postcss-mixins": "^9.0.2",
    "postcss-nested": "^5.0.6",
    "utils-min": "^0.2.0"
  },
  "devDependencies": {
    "@types/lodash.debounce": "^4.0.6",
    "@types/minimist": "^1.2.2",
    "@types/mocha": "^9.1.0",
    "@types/postcss-import": "^14.0.0",
    "execa": "^6.1.0",
    "mocha": "^9.2.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "bin": {
    "pcss": "./dist/bin-pcss.js"
  },
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "test": "TS_NODE_PROJECT='test/tsconfig.json' ./node_modules/.bin/mocha",
    "testw": "TS_NODE_FILES=true ./node_modules/.bin/mocha -p ./test/tsconfig.json ./test/src/*.spec.ts --watch --watch-files './test/**/*.ts','./src/**/*.ts'",
    "prepack": "node_modules/.bin/rimraf ./dist && ./node_modules/.bin/tsc"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "author": "Jeremy Chone <jeremy.chone@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BriteSnow/pcss-cli/issues"
  }
}
